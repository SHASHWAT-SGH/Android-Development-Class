<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight="1"
        >

        <RadioGroup
            android:layout_marginTop="20dp"
            android:id="@+id/radio_group_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“The greatest glory in living lies not in never falling, but in rising every time we fall.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“The greatest glory in living lies not in never falling, but in rising every time we fall.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“You only live once, but if you do it right, once is enough.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“You only live once, but if you do it right, once is enough.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“Be the change that you wish to see in the world.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“Be the change that you wish to see in the world.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“If you want to know what a man's like, take a good look at how he treats his inferiors, not his equals.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“If you want to know what a man's like, take a good look at how he treats his inferiors, not his equals.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RadioGroup>

    </ScrollView>

    <Button
        android:id="@+id/btn_share_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Quote"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/serif_regular"
        />

</LinearLayout>