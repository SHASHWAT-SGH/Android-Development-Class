<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="35dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quotes"
        android:fontFamily="@font/serif_regular"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="20dp"
        android:layout_weight="1"
        android:scrollbars="none"
        >

        <RadioGroup
            android:layout_marginTop="20dp"
            android:id="@+id/radio_group_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“The greatest glory in living lies not in never falling, but in rising every time we fall.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“The greatest glory in living lies not in never falling, but in rising every time we fall.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“You only live once, but if you do it right, once is enough.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“You only live once, but if you do it right, once is enough.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“Be the change that you wish to see in the world.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“Be the change that you wish to see in the world.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“If you want to know what a man's like, take a good look at how he treats his inferiors, not his equals.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“If you want to know what a man's like, take a good look at how he treats his inferiors, not his equals.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“Without music, life would be a mistake.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“Without music, life would be a mistake.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“I am so clever that sometimes I don't understand a single word of what I am saying.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“I am so clever that sometimes I don't understand a single word of what I am saying.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“To be yourself in a world that is constantly trying to make you something else is the greatest accomplishment.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“To be yourself in a world that is constantly trying to make you something else is the greatest accomplishment.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardCornerRadius="12dp"
                android:backgroundTint="@color/white"
                android:layout_marginBottom="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    >
                    <RadioButton
                        android:id="@+id/radio_quote_8"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:text="“Insanity is doing the same thing, over and over again, but expecting different results.”"
                        android:textSize="0sp"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="“Insanity is doing the same thing, over and over again, but expecting different results.”"
                        android:textSize="20sp"
                        android:fontFamily="@font/serif_regular"
                        android:gravity="center"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </RadioGroup>

    </ScrollView>

    <Button
        android:id="@+id/btn_share_quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Quote"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/serif_regular"
        />

</LinearLayout>