<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/portfolio_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:paddingTop="10dp"
        app:title=" "
        app:titleTextColor="@color/black"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/shashwat"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shashwat Kumar Singh"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:fontFamily="@font/serif_regular"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Full Stack Developer"
        android:layout_gravity="center"
        android:fontFamily="@font/serif_regular"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vnsshashwat@gmail.com | 9140062946"
        android:layout_gravity="center"
        android:fontFamily="@font/serif_regular"
        android:textSize="16sp"
        android:layout_marginTop="4dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_github"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#181616"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_github"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_linkedin"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="#0C64C5"
            app:cardCornerRadius="12dp"
            android:clickable="true"
            android:focusable="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_linkedin"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Projects"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/serif_regular"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btn_see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textSize="16sp"
            android:text="See all"
            android:textColor="#827f7f"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/project_amigo"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_projects_amigo"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="Amigo: A better way to split your expenses"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/serif_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/project_soil"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="Soil Sustain: Get the best farm on your land"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/serif_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_project_soil"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/project_retro"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_project_retro"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:text="Retro Bazaar: University market place for second hand trade"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:fontFamily="@font/serif_regular"
                        android:textSize="16sp"
                        android:gravity="center"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>




</LinearLayout>